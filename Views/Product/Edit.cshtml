@model WebServiceCosmetics.Models.ProductModel

@{
    ViewData["Title"] = "Редактировать продукт";
}

<h2>Редактировать сырьё</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Название</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Unit_id">Единица измерения</label>
        <select asp-for="Unit_id" class="form-control" asp-items="ViewBag.Units" required>
        </select>
    </div>

    <div class="form-group">
        <label>Количество</label>
        <input asp-for="Quantity" type="number" step="0.01" class="form-control" />
    </div>

    <div class="form-group">
        <label>Цена</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" required />
        <div class="input-group-append">
            <span class="input-group-text">Сом</span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
