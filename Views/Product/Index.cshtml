@model IEnumerable<WebServiceCosmetics.Models.ProductModel>

@{
    ViewData["Title"] = "Продукты";
}

<h2>Продукты</h2>

<a asp-action="Create" class="btn btn-primary">Добавить новый продукт</a>
@Html.AntiForgeryToken()

<table class="table mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Наименование</th>
            <th>Единица измерения</th>
            <th>Количество</th>
            <th>Цена</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Unit?.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
               <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Редактировать</a>

                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline-block;"
                          onsubmit="return confirm('Вы уверены, что хотите удалить этот элемент?');">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                </form>

                </td>
            </tr>
        }
    </tbody>
</table>
