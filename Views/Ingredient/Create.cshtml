@model WebServiceCosmetics.Models.IngredientModel

@{
    ViewData["Title"] = "Добавить ингредиент";
}

<h2>Добавить ингредиент</h2>

<form asp-action="Create">
    <div class="mb-3">
        <label class="form-label">ID сырья</label>
        <input asp-for="Raw_Material_id" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">ID продукта</label>
        <input asp-for="Product_id" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Количество</label>
        <input asp-for="Quantity" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Сохранить</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-3">Назад</a>
