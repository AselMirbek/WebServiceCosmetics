@model WebServiceCosmetics.Models.IngredientModel

@{
    ViewData["Title"] = "Редактировать ингредиент";
}

<h2>Редактировать ингредиент</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Продукт</label>
        <input class="form-control" value="@ViewBag.ProductName" readonly />
        <input type="hidden" asp-for="Product_id" /> <!-- Скрытое поле для передачи ID -->
    </div>
    <div class="mb-3">
        <label class="form-label">Сырье</label>
        <select class="form-control" asp-for="Raw_Material_id" asp-items="ViewBag.RawMaterials"></select>
    </div>

    <div class="form-group">
        <label for="quantity">Количество:</label>
        <!-- Используем asp-for для привязки к свойству модели Quantity -->
        <input type="number" class="form-control" id="quantity" name="Quantity" step="0.01" min="0" required asp-for="Quantity" />
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-3">Назад</a>
