@model WebServiceCosmetics.Models.ProductSalesModel

@{
    ViewData["Title"] = "Создать продажу продукта";
}

<h1>Создать продажу продукта</h1>

<form method="post">
    <div class="form-group">
        <label for="Product_id">Продукт</label>
        <select asp-for="Product_id" class="form-control" asp-items="ViewBag.Product_id"></select>
    </div>

    <div class="form-group">
        <label for="Quantity">Количество</label>
        <input asp-for="Quantity" type="number" step="0.01" class="form-control" required />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Amount">Сумма</label>
        <input asp-for="Amount" type="number" step="0.01" class="form-control" required />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Date">Дата</label>
        <input asp-for="Date" class="form-control" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Создать</button>
</form>

<a href="@Url.Action("Index", "ProductSales")" class="btn btn-secondary">Назад</a>

