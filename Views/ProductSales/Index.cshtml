@model IEnumerable<WebServiceCosmetics.Models.ProductSalesModel>

@{
    ViewData["Title"] = "Product Sales";
}

<h1>Product Sales</h1>

<a href="@Url.Action("Create", "ProductSales")" class="btn btn-primary">Добавить продажу</a>

<table class="table">
    <thead>
        <tr>
            <th>Продукт</th>
            <th>Количество</th>
            <th>Сумма</th>
            <th>Дата</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductModel.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Amount</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>
                    <a href="@Url.Action("Edit", "ProductSales", new { id = item.Id })" class="btn btn-warning">Редактировать</a>

                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline-block;"
                          onsubmit="return confirm('Вы уверены, что хотите удалить этот элемент?');">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
