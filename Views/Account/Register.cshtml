@using WebServiceCosmetics.ViewModel;
@model RegisterViewModel;

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<style>
    .account-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh; /* вертикальное центрирование */
        padding: 20px;
        background-color: #fff0f6; /* очень нежный розовый фон, можно убрать или менять */
    }

    .account-box {
        width: 100%;
        max-width: 400px; /* ограничиваем ширину формы */
        padding: 30px 40px;
        background: white;
        box-shadow: 0 4px 12px rgba(204, 51, 102, 0.2); /* легкая тень с розовым оттенком */
        border-radius: 10px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

        .account-box h2 {
            color: #cc3366; /* акцентный розовый */
            font-weight: 700;
            margin-bottom: 30px;
        }

    label.form-label {
        font-weight: 600;
        color: #660033;
    }

    .btn-success {
        background-color: #cc3366;
        border: none;
    }

        .btn-success:hover {
            background-color: #a32a57;
        }

    a.text-decoration-none {
        color: #cc3366;
    }

        a.text-decoration-none:hover {
            color: #a32a57;
            text-decoration: underline;
        }

    <style >
    @@media (max-width: 480px) {
        .account-box

    {
        padding: 20px;
        max-width: 90%;
    }

    }
</style>

</style>

<div class="account-container">
    <div class="account-box">
        <h2 class="text-center mb-4">Register</h2>
        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Role" class="form-label">Role</label>
                <select asp-for="Role" class="form-select" asp-items="Model.Roles">
                    <option value="">-- Выберите роль --</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <input type="submit" value="Register" class="btn btn-success w-100 p-2" />

            <p class="text-center mt-2">
                Already have an account? <a asp-controller="Account" asp-action="Login" class="text-decoration-none">Login</a>
            </p>

            <div class="text-center">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none mt-3">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
