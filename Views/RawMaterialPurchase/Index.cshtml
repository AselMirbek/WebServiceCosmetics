@model IEnumerable<WebServiceCosmetics.Models.RawMaterialPurchaseModel>
@{
    ViewData["Title"] = "Список сырья";
}
<h2>Закупки сырья</h2>
<a asp-action="Create" class="btn btn-primary">Добавить</a>
<table class="table">
    <thead>
        <tr>
            <th>Сырье</th>
            <th>Количество</th>
            <th>Сумма</th>
            <th>Дата</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RawMaterialModel.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Amount</td>
                <td>@item.Date.ToLocalTime().ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Редактировать</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline-block;"
                          onsubmit="return confirm('Вы уверены, что хотите удалить этот элемент?');">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
