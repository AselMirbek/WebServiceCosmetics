@model WebServiceCosmetics.Models.RawMaterialPurchaseModel

@{
    ViewData["Title"] = "Редактировать продукт";
}

<h2>Редактировать сырьё</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Наименования Сырья</label>
        <input asp-for="Raw_Material_id" class="form-control"  />
    </div>

  

    <div class="form-group">
        <label>Количество</label>
        <input asp-for="Quantity" type="number" step="0.01" class="form-control" />
    </div>

    <div class="form-group">
        <label>Сумма</label>
        <input asp-for="Amount" type="number" step="0.01" class="form-control" required />
        <div class="input-group-append">
            <span class="input-group-text">Сом</span>
        </div>

    </div>
    <div class="form-group">
        <label>Дата</label>
        <input asp-for="Date" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
