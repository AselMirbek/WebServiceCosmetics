@model IEnumerable<WebServiceCosmetics.Models.ProductManufacturingModel>

@{
    ViewData["Title"] = "Product Manufacturing";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Создать производство продукции</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Продукт</th>
            <th>Количество</th>
            <th>Дата</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductModel.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning">Редактировать</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline-block;"
                          onsubmit="return confirm('Вы уверены, что хотите удалить этот элемент?');">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
