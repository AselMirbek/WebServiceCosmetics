@model IEnumerable<WebServiceCosmetics.Models.Employer>

<h2>Список сотрудников</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Полное имя</th>
            <th>Должность</th>
            <th>Зарплата</th>
            <th>Адрес</th>
            <th>Телефон</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Full_Name</td>
                <td>@employee.Position_id</td>
                <td>@employee.Salary</td>
                <td>@employee.Address</td>
                <td>@employee.Phone</td>
                <td>
                    <!-- Кнопка для перехода на страницу редактирования (GET-метод Edit) -->
                    <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-info">Редактировать</a>

                    <!-- Форма для удаления сотрудника -->
                    <form asp-action="Delete" asp-route-id="@employee.Id" method="post" style="display:inline-block;"
                          onsubmit="return confirm('Вы уверены, что хотите удалить этого сотрудника?');">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>

                    <!-- Кнопка для перехода на страницу обновления (GET-метод Update) -->
                    <a asp-action="Update" asp-route-id="@employee.Id" class="btn btn-warning">Обновить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
